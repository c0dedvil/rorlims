<h1>Users List</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Username</th>
    <th>Email</th>
    <th>Level</th>
    <th>Area</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Telephones</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.level %></td>
    <td><%= user.area %></td>
    <td><%= user.first_name %></td>
    <td><%= user.surname %></td>
    <td><%= user.telephones %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

